<h1>Edit note</h1>

<form method="post" action="/notes">
<input type="hidden" name="_method" value="PUT" />
  <div>
    <label>Note title:</label>
    <input type="text" name="title" value="<%= @note.title %>">
  </div>
  <div>
    <label>Notebook:</label>
    <select name="notebook_guid">
      <% notebooks.each do |notebook| %>
      <option value="<%= notebook.guid %>" 
        <% if notebook.guid == @note.notebookGuid %>
          selected
        <% end %>>
      <%= notebook.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <input type="text" name="content" rows="25" cols="80" value="<%= strip_content(@note.content) %>">
  </div>
  <div>
    <input type="hidden" name="guid" value= "<%= @note.guid %>"/>
    <input type="submit" value="Submit"/>
  </div>
</form>